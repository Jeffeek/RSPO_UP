<Page
    x:Class="RSPO_UP_6.View.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RSPO_UP_6.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsPage"
    d:DesignHeight="600"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.4*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Column="0"
            VerticalAlignment="Center"
            Foreground="Cyan"
            Text="Choose image from your computer for your cow-hero!!!" />
        <Button
            Grid.Row="0"
            Grid.Column="1"
            Height="20px"
            Content="Choose Image"
            Command="{Binding Settings.ChangeCowImageCommand}"/>

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Center"
            Foreground="Cyan"
            Text="Choose image from your computer for your evil-wolf!!!" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Height="20px"
            Content="Choose Image" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Center"
            Foreground="Cyan"
            Text="Choose how much lives will have cow-hero!!!" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Height="20"
            Margin="0,5,0,0"
            VerticalAlignment="Top" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Height="20px"
            Content="Apply" />

    </Grid>
</Page>
