    <Style x:Key="BathroomStyle" TargetType="Rectangle">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Bathroom.Lamp.IsOn}" Value="True">
                <Setter Property="Fill">
                    <Setter.Value>
                        <LinearGradientBrush>
                            <GradientStopCollection>
                                <GradientStop Offset="0.155" Color="Gray" />
                                <GradientStop Offset="0.485" Color="Yellow" />
                            </GradientStopCollection>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding Bathroom.Lamp.IsOn}" Value="False">
                <Setter Property="Fill">
                    <Setter.Value>
                        Gray
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>