<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style
        x:Key="RoomStyle1"
        BasedOn="{StaticResource RoomStyle}"
        TargetType="Rectangle">
        <Style.Triggers>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding FirstRoom.Lamp.IsOn}" Value="false" />
                    <Condition Binding="{Binding FirstRoom.Bruh.IsOn}" Value="false" />
                </MultiDataTrigger.Conditions>
                <Setter Property="Fill">
                    <Setter.Value>
                        Gray
                    </Setter.Value>
                </Setter>
            </MultiDataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding FirstRoom.Lamp.IsOn}" Value="true" />
                    <Condition Binding="{Binding FirstRoom.Bruh.IsOn}" Value="false" />
                </MultiDataTrigger.Conditions>
                <Setter Property="Fill">
                    <Setter.Value>
                        <LinearGradientBrush>
                            <GradientStopCollection>
                                <GradientStop Offset=".33" Color="Gray" />
                                <GradientStop Offset=".66" Color="Yellow" />
                            </GradientStopCollection>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </MultiDataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding FirstRoom.Lamp.IsOn}" Value="false" />
                    <Condition Binding="{Binding FirstRoom.Bruh.IsOn}" Value="true" />
                </MultiDataTrigger.Conditions>
                <Setter Property="Fill">
                    <Setter.Value>
                        <LinearGradientBrush>
                            <GradientStopCollection>
                                <GradientStop Offset=".66" Color="Gray" />
                                <GradientStop Offset=".33" Color="Yellow" />
                            </GradientStopCollection>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </MultiDataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding FirstRoom.Lamp.IsOn}" Value="True" />
                    <Condition Binding="{Binding FirstRoom.Bruh.IsOn}" Value="True" />
                </MultiDataTrigger.Conditions>
                <Setter Property="Fill">
                    <Setter.Value>
                        Yellow
                    </Setter.Value>
                </Setter>
            </MultiDataTrigger>
        </Style.Triggers>
    </Style>

