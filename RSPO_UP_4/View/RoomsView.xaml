<Window
    x:Class="RSPO_UP_4.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:command="http://www.galasoft.ch/mvvmlight"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:RSPO_UP_4"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:RSPO_UP_4.ViewModel"
    Title="MainWindow"
    Width="800"
    Height="550"
    mc:Ignorable="d">
    <Window.InputBindings>
        <KeyBinding Key="W" Command="{Binding MoveUpCommand}" />
        <KeyBinding Key="A" Command="{Binding MoveLeftCommand}" />
        <KeyBinding Key="S" Command="{Binding MoveDownCommand}" />
        <KeyBinding Key="D" Command="{Binding MoveRightCommand}" />
    </Window.InputBindings>
    <Window.DataContext>
        <vm:RoomsViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style x:Key="roomStyle" TargetType="Rectangle">
            <Style.Triggers>
                <DataTrigger Binding="{Binding NightTime, UpdateSourceTrigger=PropertyChanged}" Value="false">
                    <DataTrigger.Setters>
                        <Setter Property="Fill" Value="Gray" />
                    </DataTrigger.Setters>
                </DataTrigger>
                <DataTrigger Binding="{Binding NightTime, UpdateSourceTrigger=PropertyChanged}" Value="true">
                    <DataTrigger.Setters>
                        <Setter Property="Fill" Value="Yellow" />
                    </DataTrigger.Setters>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="0.05*" />
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0">
            <Rectangle
                x:Name="Room_1"
                Canvas.Left="150"
                Canvas.Top="20"
                Width="200"
                Height="200"
                Stroke="Black"
                Style="{StaticResource roomStyle}"/>
            <Rectangle
                x:Name="Room_2"
                Canvas.Left="450"
                Canvas.Top="20"
                Width="200"
                Height="200"
                Stroke="Black"
                Style="{StaticResource roomStyle}" />
            <Rectangle
                x:Name="Room_3"
                Canvas.Left="300"
                Canvas.Top="250"
                Width="200"
                Height="200"
                Stroke="Black"
                Style="{StaticResource roomStyle}" />
            <Rectangle
                x:Name="Player"
                Canvas.Left="{Binding Player.Left, UpdateSourceTrigger=PropertyChanged}"
                Canvas.Top="{Binding Player.Up, UpdateSourceTrigger=PropertyChanged}"
                Canvas.Right="{Binding Player.Right, UpdateSourceTrigger=PropertyChanged}"
                Canvas.Bottom="{Binding Player.Down, UpdateSourceTrigger=PropertyChanged}"
                Width="50"
                Height="50"
                Fill="Black" />
            <Button Content="Lamp" Canvas.Left="300" Canvas.Top="195" Width="50" Height="25"/>
            <Button Content="Lamp" Canvas.Left="450" Canvas.Top="425" Width="50" Height="25"/>
            <Button Content="Lamp" Canvas.Left="600" Canvas.Top="195" Width="50" Height="25"/>
        </Canvas>
        <ToolBar Grid.Row="1">
            <TextBlock Text="{Binding DateString, UpdateSourceTrigger=PropertyChanged}" />
        </ToolBar>
    </Grid>
</Window>
